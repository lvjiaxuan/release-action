{
  "name": "@lvjiaxuan/release-action",
  "version": "0.0.1",
  "private": true,
  "description": "Create a release on tag push",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "pnpm build && pnpm package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lvjiaxuan/release-action"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "TypeScript template action"
  ],
  "author": "lvjiaxuan <471501748@qq.com> (https://github.com/lvjiaxuan)",
  "prettier": "@lvjiaxuan/prettier-config",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.8.2",
    "@actions/github": "^5.0.3"
  },
  "devDependencies": {
    "@lvjiaxuan/prettier-config": "^0.0.3",
    "@types/node": "^17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.17.0",
    "eslint-plugin-github": "^4.3.6",
    "js-yaml": "^4.1.0",
    "prettier": "2.6.2",
    "typescript": "^4.7.3"
  }
}
